<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_myinfo"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="80%"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/flag"
            android:layout_gravity="right"
            android:layout_marginRight="92dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_gravity="bottom"
>
            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#ED6D58"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ww"/>

        </FrameLayout>
    </FrameLayout>



    <LinearLayout
        android:layout_marginTop="420dp"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />



                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/item_1"/>
                <Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/item_2"/>

                <Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/item_4"/>
                <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/item_6"/>
                <Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/item_3"/>
            </LinearLayout>

        </HorizontalScrollView>


    </LinearLayout>



    <Button
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:id="@+id/again" />

</FrameLayout>